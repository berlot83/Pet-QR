<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_french_bulldog"
    tools:context="com.example.newpc.qrcode.MenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottom_bar_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_bar"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.andexert.library.RippleView
                android:id="@+id/button_effect1"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_toLeftOf="@+id/more2"
                rv_centered="true">

            <ImageView
                android:id="@+id/scan"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:src="@drawable/doggy_48"
                android:layout_centerInParent="true"
                android:layout_margin="15px" />

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/button_effect2"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_toLeftOf="@+id/more2"
                rv_centered="true">
            <ImageView
                android:id="@+id/cloud"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:src="@drawable/cloud_48"
                android:layout_centerInParent="true"
                android:layout_margin="15px"/>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/button_effect3"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_toLeftOf="@+id/more2"
                rv_centered="true">
            <ImageView
                android:id="@+id/gen"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:src="@drawable/help_48"
                android:layout_centerInParent="true"
                android:layout_margin="15px"/>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/button_effect4"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_toLeftOf="@+id/more2"
                rv_centered="true">
            <ImageView
                android:id="@+id/about"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:src="@drawable/about_48"
                android:layout_centerInParent="true"
                android:layout_margin="15px"/>
            </com.andexert.library.RippleView>


            <com.andexert.library.RippleView
                android:id="@+id/button_effect5"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_toLeftOf="@+id/more2"
                rv_centered="true">
            <ImageView
                android:id="@+id/exit"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:clickable="true"
                android:src="@drawable/exit_48"
                android:layout_centerInParent="true"
                android:layout_margin="15px"
                />
            </com.andexert.library.RippleView>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.CoordinatorLayout>
